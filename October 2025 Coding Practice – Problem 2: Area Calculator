import math

def area_calculator():
    print("I can calculate the area of a shape for you.")
    shape = input("Which shape do you want me to calculate the area of? ").strip().lower()

    try:
        if shape == "circle":
            radius = float(input("Enter the radius: "))
            if radius <= 0:
                print("Radius must be positive.")
                return
            area = math.pi * radius ** 2

        elif shape == "rectangle":
            length = float(input("Enter the length: "))
            width = float(input("Enter the width: "))
            if length <= 0 or width <= 0:
                print("Length and width must be positive.")
                return
            area = length * width

        elif shape == "square":
            side = float(input("Enter the side length: "))
            if side <= 0:
                print("Side length must be positive.")
                return
            area = side ** 2

        elif shape == "triangle":
            base = float(input("Enter the base: "))
            height = float(input("Enter the height: "))
            if base <= 0 or height <= 0:
                print("Base and height must be positive.")
                return
            area = 0.5 * base * height

        else:
            print("Sorry, I don't recognize that shape.")
            return

        print(f"The area of the {shape} is {round(area, 2)}.")

    except ValueError:
        print("Invalid input. Please enter numeric values.")

# Run program
if __name__ == "__main__":
    area_calculator()
